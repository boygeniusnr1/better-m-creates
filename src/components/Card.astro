---
const { title, date, time, address } = Astro.props;
---

<div class="swap-card">
  <h3>{title}</h3>
  <p><strong>Date:</strong> {date}</p>
  <p><strong>Time:</strong> {time}</p>
  <p><strong>Address:</strong> {address}</p>
</div>
<style>
  .swap-card {
    background-color: #fff7eb; /* Slightly off-white for cards */
    border-radius: 8px;
    padding: 1.25rem;
    color: var(--text-color);
  }

  .swap-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--accent-color); /* Use accent color for swap names */
  }

  .swap-card p {
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }

  .swap-card p:last-child {
    margin-bottom: 0;
  }
</style>
